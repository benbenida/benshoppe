<div class="container my-5 text-center">
   <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
         <h2>Forgot Password</h2>
         <form action="/login" method="GET">
            <div class="form-group">
               <label for="email">Input your email address to send a link for your password recovery</label>
               <input type="email" name="email" id="email" required class="form-control">
            </div>
               <button type="submit" class="btn btn-login px-md-5">send the link</button>
         </form>
      </div>
      <div class="col-md-3"></div>
   </div>
</div>

