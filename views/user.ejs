<%- include("partials/header", {current: "my-account"}) %>

<div class="container my-3">
   <div class="row">
      <div class="col-md-4">
         <div class="info">
            <h2>User Info</h2>
            <div class="link-edit">
               <a href="#"><i class="fas fa-edit"></i></a>
            </div>
         </div>
         
         <div class="info-group">
            <span class="info-label">Name</span>
               <h4><%= foundUser.firstname %> <%= foundUser.lastname %></h4>
         </div>
         <div class="info-group">
            <span class="info-label">Username</span>
               <h4><%= foundUser.username %></h4>
         </div>
         <div class="info-group">
            <span class="info-label">Email</span>
               <h4><%= foundUser.email %></h4>
         </div>
         <div class="info-group">
            <span class="info-label">Membership</span>
               <h4><%= foundUser.membership %></h4>
         </div>

      </div>
      <div class="col-md-8">
         <table class="table">
            <thead>
               <tr>
                  <th scope="col" colspan="2" class="text-center col-head">MY ACCOUNT DETAILS</th>
               </tr>
            </thead>
               <tr>
                  <th scope="row">
                     College Course
                  </th>
                  <td>
                     BS in Information Technology
                  </td>
               </tr>
               <tr>
                  <th scope="row">
                     Future Job
                  </th>
                  <td>
                     Magbobote
                  </td>
               </tr>
               <tr>
                  <th scope="row">
                     My Products
                  </th>
                  <td>
                     <%= foundUser.numOfProducts %> Product(s)
                  </td>
               </tr>
         </table>
      </div>
   </div>
</div>

<%- include("partials/footer", {current: ""}) %>