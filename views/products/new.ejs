<%- include("../partials/header", {current: "products/new"}) %>

<div class="container my-2">
   <form action="/products" method="POST" enctype="multipart/form-data">
      <div class="row">
         <div class="col-md-4">
            <h4>Write down something!</h4>
            <small>some cheesy ass quote</small>
            
            <div class="form-group d-sm-none d-lg-block">
               <label for="productImage">Product Image</label>
               <input type="file" name="productImage" id="productImage" class="form-control" accept="image/.jpeg,.jpg,.png">
               <center><img src="/images/preview.jpg" id="preview" class="img-thumbnail my-2" width="368px"></center>
            </div>

         </div>

         <div class="col-md-8">

            
               <div class="form-group">
                  <label for="productName">Product Name</label>
                  <input type="text" name="productName" id="productName" placeholder="Product Name" class="form-control form-control-lg">
               </div>

               <div class="form-group d-sm-block d-lg-none">
                  <label for="productImage">Product Image</label>
                  <input type="file" name="productImage" id="productImage" class="form-control" accept="image/.jpeg,.jpg,.png">
                  <center><img src="/images/preview.jpg" id="preview" class="img-thumbnail" width="368px"></center>
               </div>
            
               <div class="form-group">
                  <div class="row">

                     <div class="col-md-4">
                        <label for="price">Price</label>
                        <div class="input-group">
                           <div class="input-group-prepend">
                              <div class="input-group-text">â‚±</div>
                           </div>
                           <input type="number" name="price" id="price" class="form-control" min="0.01" step="0.01">
                        </div>
                     </div>
                  
                     <div class="col-md-4">
                        <label for="quantity">Quantity</label>
                        <input type="number" name="quantity" id="quantity" class="form-control" min="1">
                     </div>

                     <div class="col-md-4">
                        <label for="number">Category</label>
                        <input type="text" name="category" id="category" list="category-list" class="form-control" autocomplete="off">
                        <datalist id="category-list">
                           <% categories.forEach(category =>{ %>
                              <option value="<%= category %>"></option>
                           <% }); %>
                        </datalist>
                     </div>
                  </div>
               </div>
               <div class="form-group">
                  <label for="productDesc">Product Description</label>
                  <textarea name="productDesc" id="productDesc" cols="30" rows="10" class="form-control" placeholder="Write something interesting to attract your buyers!"></textarea>
               </div>

               <button type="submit" class="btn btn-addproduct">submit</button>
         </div>
      </div>
</form>
</div>

<%- include("../partials/footer", {current: "products/new"}) %>