<%- include("partials/header", {current: "signup"}) %>

   <!-- END OF HEADER -->

<div class="container-fluid">
   <div class="row">
      <div class="signup-container">
         <center>
            <img src="images/LOGO-1.png" width="300em" alt="">
         </center>
         <form action="/signup" method="POST" id="signup">
            <div class="form-group">
               <div class="row">
                  <div class="col-auto">
                     <label>Last Name</label>
                     <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Last Name" required>
                  </div>
                  <div class="col-auto">
                     <label>First Name</label>
                     <input type="text" name="firstname" class="form-control" id="firstname" placeholder="First Name" required>
                  </div>
               </div>
            </div>
            
            <div class="form-group">
               <label for="gender">Gender</label>
                  <select class="form-control" name="gender" id="gender" required>
                     <option selected disabled>Select One</option>
                     <option value="male">Male</option>
                     <option value="female">Female</option>
                     <option value="other">Other</option>
                  </select>
            </div>

            <div class="form-group">
               <label for="email">Email</label>
                  <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
            </div>

            <div class="form-group">
               <label for="email">Username</label>
                  <input type="text" name=username id="username" class="form-control" placeholder="Username" required>
            </div>

            <div class="form-group">
               <label for="membership">Membership</label>
                  <select class="form-control" name="membership" id="membership" required>
                     <option selected disabled>Select One</option>
                     <option value="free">Free</option>
                     <option value="premium">Premium</option>
                     <option value="deluxe">Deluxe</option>
                  </select>
            </div>

            <div class="form-group">
               
               <div class="row">
                  
                  <div class="col-auto">
                     <label>Password</label>
                     <input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
                     <small id="alert" class="invisible">Password must be 8 characters and above!</small>
                  </div>
                  
                  <div class="col-auto">
                     <label>Confirm Password</label>
                     <input type="password" name="confirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm Password" required>
                     <small id="alert" class="invisible">Password does not match!</small>
                  </div>
               </div>
               <small id="alert" class="invisible">Password must not have special characters!</small>
            </div>
            <center>
               <button type="submit" class="btn btn-login" id="button-submit">register</button> 
            </center>
         </form>
      </div>
   </div>
</div>

<%- include("partials/footer", {current: "signup"}) %>